generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum LedgerType {
  CREDIT
  DEBIT
}

enum ReferenceType {
  PAYMENT
  TRANSFER
}

enum PaymentStatusType {
  CREATED
  SUCCESS
  FAILED
}

enum TransferStatusType {
  SUCCESS
  FAILED
}

model User {
  id            String        @id @default(uuid())
  email         String        @unique
  passwordHash  String
  role          String
  createdAt     DateTime      @default(now())
  wallet        Wallet?
  ledgerEntries LedgerEntry[]
  payment       Payment[]

  @@map("users")
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@map("wallets")
}

model LedgerEntry {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  amount        Int
  type          LedgerType
  referenceType ReferenceType
  referenceId   String
  createdAt     DateTime      @default(now())

  @@map("ledger_entries")
}

model Payment {
  id                String  @id @default(uuid())
  provider          String
  providerOrderId   String  @unique @default(uuid())
  providerPaymentId String? @unique

  userId String
  user   User   @relation(fields: [userId], references: [id])

  amount    Int
  status    PaymentStatusType
  createdAt DateTime          @default(now())

  @@map("payments")
}

model Transfer {
  id         String             @id @default(uuid())
  fromUserId String
  toUserId   String
  amount     Int
  status     TransferStatusType
  createdAt  DateTime           @default(now())

  @@map("transfers")
}
